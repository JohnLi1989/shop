<% include layout %>
<link rel="stylesheet" href="/stylesheets/tishi.css">
<link rel="stylesheet" href="/stylesheets/shopcart.css">
<body>
<div id="content" style="width:100%;">
    <div class="wx_wrap" id="wrapper">
        <div id="editContent" class="address_bar_wrap fixed" style="display:<% if(!goods){ %>none<% } %>">
            <div class="address_bar">
                <span class="btn" id="editBtn">编辑</span>
            </div>
        </div>

        <div id="listContent" style="display:<% if(!goods){ %>none<% } %>;position: absolute; width: 100%; top: -35px; transform: translateY(0px);">
            <div id="list">
                <div class="cart_refresh" id="pullDown">
                    <div class="icon"><i id="pullDownIC" class=""></i></div>
                    <p id="pullDownLabel">下拉刷新购物车</p>
                </div>
                <div class="section">
                    <% if(goods){ %>
                    <% goods.forEach(function(item){ %>
                    <div class="item cart_goods" goodsid="<%=item._id%>">
                        <div class="goods_wrap">
                            <div class="goods" price="<%=item.shop_price%>"><i onclick="goods_select(this);" class="icon_select"></i>
                                <a href="/goods/<%=item._id%>" class="link">
                                   <img class="image" src="<%=item.goods_thumb%>" width="80" height="80" />
                                </a>
                                <div class="content" attr-href="/goods/<%=item._id%>" onclick="see_goods(this);"><p class="name"><%=item.goods_name%></p>
                                    <p class="price">¥<span><%=item.shop_price%></span></p>
                                    <div class="action"> <a href="javascript:void(0);" class="action_fav">
                                        <span>移至收藏</span></a>
                                        <a href="javascript:void(0);" class="action_delete"><span>删除</span></a>
                                   </div>
                                    <a href="#" class="btn" style="display:none">到货通知我</a>
                                    <p class="tips"></p>
                                </div>
                                <div class="num_wrap">
                                    <span class="minus" onclick="minus_number(this);"></span>
                                    <input class="num" type="tel" value="1">
                                   <span class="plus" onclick="plus_number(this);"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                    <% } %>
                </div>
            </div>
        </div>
        <div id="emptyContent">
            <div class="shopcart_none" id="normalEmpty" style="display:<% if(goods){ %>none<% } %>;position:relative;padding-top:1px">
                <i class="icon"></i>
                <p class="title">您的购物车内还没有商品！</p>
                <div class="mod_btns">
                    <a href="/users/me" class="mod_btn">个人中心</a>
                    <a href="" class="mod_btn" id="rego">立即逛逛</a>
                </div>
            </div>
        </div>
    </div>
    <div id="mainViewFoot" style="display:<% if(!goods){ %>none<% } %>">
        <div class="fixBar" name="checkgroup" id="checkAllBtn">
            <i class="icon_select" id="chooseAll">全选</i>
            <div class="total" id="totalConfirmDiv">
                <p>总计：<strong>¥<span id="totalPrice">0.0</span></strong><small>(不含运费)</small></p>
                <a href="javascript:;" class="btn_pay" id="shopCartConfirm">结算（<em id="totalNum">0</em>）</a>
            </div>
            <div class="btns" style="display:none" id="operateDiv">
                <a href="javascript:;" class="btn_2" id="addFavor">移至收藏</a>
                <a href="javascript:;" class="btn_3" id="deleteBtn">删除</a>
            </div>
        </div>

    </div>

    <!-- ajax loading -->
    <!--<div class="mod_alert mod_alert_loading fixed" id="wxloading">
        <div class="wx_loading2">
            <i class="wx_loading_icon"></i>
        </div>
    </div>-->
    <!-- ajax loading end-->

    <div id="dialogConent" class="mod_alert fixed">
        <i class="icon"></i>
        <p> 是否确认将已选中商品删除？</p><p class="btns">
            <a href="javascript:;" class="btn btn_1" id="confirm">确认</a>
            <a href="javascript:;" class="btn" id="cancel">取消</a>
        </p>
    </div>
    <div id="dialogConent2" class="mod_alert fixed">
        <i class="icon"></i>
        <p> 是否确认将已选中商品移至收藏？</p><p class="btns">
            <a href="javascript:;" class="btn btn_1" id="confirm2">确认</a>
            <a href="javascript:;" class="btn" id="cancel2">取消</a>
        </p>
    </div>
</div>
<div class="mask"></div>
</div>
<script src="/javascripts/shopcart.js"></script>
<script src="/javascripts/quickMenu.js"></script>
</body>